# Enforce strict dependency version locking
package-lock=true

# Ensure exact versions are saved to package.json
save-exact=true

# Enforce the use of package-lock.json during npm install
lockfile-version=3

# Security: audit packages on install
audit-level=high

# Performance: use local cache
prefer-offline=true

# Security: disable scripts during install for security
ignore-scripts=false

# Ensure consistent installs across environments
engine-strict=true